<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleBottomNavigationActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleBottomNavigationInactive" parent="TextStyleBottomNavigationActive">
        <item name="android:textColor">@color/whiteAccent</item>
    </style>

    <style name="SearchViewStyle" parent="AppTheme">
        <item name="android:textColorHint">@color/whiteAccent</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:background">@drawable/search_rounded_background</item>
    </style>

</resources>
