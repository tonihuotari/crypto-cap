<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/coinListingItemIconView"
        android:layout_width="@dimen/common_list_icon_size"
        android:layout_height="@dimen/common_list_icon_size"
        tools:background="@drawable/ic_coin_btc" />

    <TextView
        android:id="@+id/coinListingItemTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/coinListingItemIconView"
        tools:text="BTC" />

    <TextView
        android:id="@+id/coinListingItemNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/coinListingItemIconView"
        tools:text="Coin name" />


</android.support.constraint.ConstraintLayout>