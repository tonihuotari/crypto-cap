<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_padding"
    android:paddingEnd="@dimen/common_horizontal_margin"
    android:paddingStart="@dimen/common_horizontal_margin"
    android:paddingTop="@dimen/common_vertical_margin">

    <TextView
        android:id="@+id/ticker24hChangeHeaderView"
        android:layout_width="@dimen/ticker_column_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/common_change_24h"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tickerPriceHeaderView"
        android:layout_width="@dimen/ticker_column_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/common_price"
        app:layout_constraintRight_toLeftOf="@+id/ticker24hChangeHeaderView" />


</android.support.constraint.ConstraintLayout>