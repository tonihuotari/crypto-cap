<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_padding"
    android:paddingEnd="@dimen/common_horizontal_margin"
    android:paddingStart="@dimen/common_horizontal_margin">

    <ImageView
        android:id="@+id/tickerItemIconView"
        android:layout_width="@dimen/common_list_icon_size"
        android:layout_height="@dimen/common_list_icon_size" />

    <TextView
        android:id="@+id/tickerItemTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tickerItemIconView"
        tools:text="BTC" />

    <TextView
        android:id="@+id/tickerItemNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tickerItemIconView"
        tools:text="Coin name" />

    <TextView
        android:id="@+id/ticker24hChangeView"
        android:layout_width="@dimen/ticker_column_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/common_padding"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="-7,01%" />

    <TextView
        android:id="@+id/tickerPriceView"
        android:layout_width="@dimen/ticker_column_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/common_padding"
        app:layout_constraintRight_toLeftOf="@id/ticker24hChangeView"
        tools:text="$130,04 B" />


</android.support.constraint.ConstraintLayout>